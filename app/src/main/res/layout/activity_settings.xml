<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/aura_background"
        tools:context=".presentation.activities.SettingsActivity">
        
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/aura_surface"
            app:title="Settings"
            app:titleTextColor="@color/white"
            app:layout_constraintTop_toTopOf="parent" />
        
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Model Management"
                    android:textColor="@color/aura_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />
                
                <Button
                    android:id="@+id/btnModelManager"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Model Manager"
                    android:textSize="16sp"
                    android:backgroundTint="@color/aura_surface"
                    app:cornerRadius="28dp"
                    android:layout_marginBottom="24dp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="24dp" />
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Model Location"
                    android:textColor="@color/aura_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="/storage/emulated/0/AuraAI/models/"
                    android:textColor="@color/aura_text_secondary"
                    android:textSize="14sp"
                    android:padding="16dp"
                    android:background="@color/aura_surface"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="monospace" />
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textColor="@color/aura_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />
                
                <Button
                    android:id="@+id/btnAbout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="About Aura AI"
                    android:textSize="16sp"
                    android:backgroundTint="@color/aura_surface"
                    app:cornerRadius="28dp"
                    android:gravity="start|center_vertical"
                    android:paddingStart="24dp" />
                
            </LinearLayout>
        </ScrollView>
        
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
