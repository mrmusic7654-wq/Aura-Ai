<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/aura_background"
        tools:context=".presentation.activities.ModelManagerActivity">
        
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/aura_surface"
            app:title="Model Manager"
            app:titleTextColor="@color/white" />
        
        <!-- Permission Required Layout -->
        <LinearLayout
            android:id="@+id/permissionLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Storage Permission Required"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To load models from your device, Aura needs permission to access storage."
                android:textColor="@color/aura_text_secondary"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="32dp" />
            
            <Button
                android:id="@+id/btnRequestPermission"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text="Grant Permission"
                android:textSize="16sp"
                app:cornerRadius="28dp" />
            
        </LinearLayout>
        
        <!-- Main Content Layout -->
        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            
            <!-- Status Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@color/aura_surface">
                
                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Checking for models..."
                    android:textColor="@color/aura_text_secondary"
                    android:textSize="14sp" />
                
                <ImageButton
                    android:id="@+id/btnRefresh"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_refresh"
                    android:background="?selectableItemBackgroundBorderless"
                    android:tint="@color/aura_text_secondary" />
            </LinearLayout>
            
            <!-- Selected Model -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@color/aura_surface"
                android:layout_marginTop="1dp">
                
                <TextView
                    android:id="@+id/tvSelectedModel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No model selected"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                
                <Button
                    android:id="@+id/btnLoadModel"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Load"
                    android:textSize="14sp"
                    android:enabled="false"
                    app:cornerRadius="20dp" />
            </LinearLayout>
            
            <!-- Models List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:clipToPadding="false" />
            
            <!-- Empty State -->
            <TextView
                android:id="@+id/tvEmpty"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="No models found\n\nPlace .onnx files in:\n/storage/emulated/0/AuraAI/models/"
                android:textColor="@color/aura_text_secondary"
                android:textSize="16sp"
                android:gravity="center"
                android:visibility="gone" />
            
            <!-- Bottom Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">
                
                <Button
                    android:id="@+id/btnOpenFolder"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Open Folder"
                    android:textSize="14sp"
                    android:backgroundTint="@color/aura_surface"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="24dp" />
                
            </LinearLayout>
            
            <!-- Progress -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:visibility="gone" />
            
        </LinearLayout>
        
    </LinearLayout>
</layout>