<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Storage Permissions for loading models -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="28" />
    
    <!-- For Android 11+ -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <application
        android:name=".AuraApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AuraAI"
        android:largeHeap="true"
        tools:targetApi="31">
        
        <activity
            android:name=".presentation.activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AuraAI">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".presentation.activities.ChatActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        
        <activity
            android:name=".presentation.activities.SessionsActivity"
            android:exported="false" />
        
        <activity
            android:name=".presentation.activities.SearchActivity"
            android:exported="false" />
        
        <activity
            android:name=".presentation.activities.SettingsActivity"
            android:exported="false" />
        
        <activity
            android:name=".presentation.activities.ModelManagerActivity"
            android:exported="false" />
        
    </application>

</manifest>